# ============================================
# Application Configuration
# ============================================
NODE_ENV=production
PORT=3002

# ============================================
# MongoDB Atlas Configuration
# ============================================
# Get your connection string from MongoDB Atlas: https://www.mongodb.com/cloud/atlas
MONGODB_URI=

# ============================================
# NATS Messaging Configuration
# ============================================
# Use demo.nats.io for testing or your own NATS server
# Leave empty to disable NATS messaging
NATS_URL=nats://demo.nats.io:4222
NATS_TIMEOUT=5000

# Event subjects for order lifecycle
# NATS_SUBJECT_ORDER_CREATED=order.created
# NATS_SUBJECT_ORDER_PAID=order.paid
# NATS_SUBJECT_ORDER_CANCELED=order.canceled

# ============================================
# OPA (Open Policy Agent) Configuration
# ============================================
# Leave empty to disable policy authorization
OPA_URL=https://your-opa-worker.workers.dev
OPA_POLICY_PATH=/v1/data/orders/allow
OPA_TIMEOUT=5000
OPA_FAIL_OPEN=true

# ============================================
# Payment Gateway Configuration
# ============================================
# Mock payment gateway for testing: https://your-payment-mock.example.com
# Leave empty to simulate payments without actual gateway
PAYMENT_BASE_URL=https://payment-gateway.example.com/api
PAYMENT_API_KEY=your_payment_api_key_here
PAYMENT_TIMEOUT=10000

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=info

# ============================================
# Metrics Configuration
# ============================================
METRICS_ENABLED=true

# ============================================
# Security (Optional)
# ============================================
JWT_SECRET=your-super-secret-key-change-in-production

# ============================================
# External Services (Optional)
# ============================================
DELIVERY_SERVICE_URL=http://localhost:3001
